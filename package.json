{
  "name": "sophie-genes",
  "author": "Patrick Golden",
  "private": true,
  "dependencies": {
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "cssnext": "^1.8.3",
    "d3": "^3.5.6",
    "immutable": "^3.7.5",
    "json-stable-stringify": "^1.0.0",
    "lodash.sortby": "^3.1.5",
    "react": "^0.14.0",
    "react-dom": "^0.14.2",
    "tape": "^4.2.0",
    "watchify": "^3.3.1",
    "whatwg-fetch": "^0.9.0"
  },
  "browserify": {
    "transform": "babelify"
  },
  "scripts": {
    "bundle": "npm run bundle-js && npm run bundle-css",
    "bundle-js": "mkdir -p dist && browserify -o dist/bundle.js src/index.js",
    "bundle-css": "mkdir -p dist && cssnext style.css > dist/style.css",
    "watch": "mkdir -p dist && watchify --poll -v -d -o dist/bundle.js src/index.js"
  }
}
